---
import Button from "./ui/Button.astro";
import { getCheckoutUrl } from "../lib/checkout";

const checkoutUrl = getCheckoutUrl({ content: "header_cta", medium: "header" });
---

<header class="site-header">
  <div class="container header__inner">
    <a class="brand" href="/" data-ff-event="nav_click" data-ff-content="brand">
      Face Fitness
    </a>

    <nav class="nav" aria-label="Primary">
      <a href="#course" data-ff-event="nav_click" data-ff-content="course">Course</a>
      <a href="/about" data-ff-event="nav_click" data-ff-content="about">Our story</a>
      <a href="#faq" data-ff-event="nav_click" data-ff-content="faq">FAQs</a>
      <a href="#free-tips" data-ff-event="nav_click" data-ff-content="free_tips">Free tips</a>
    </nav>

    <Button
      href={checkoutUrl}
      variant="primary"
      target="_blank"
      rel="noreferrer"
      data-ff-event="checkout_click"
      data-ff-content="header_cta"
      data-ff-outbound="checkout"
    >
      Join the course
    </Button>
  </div>
</header>
