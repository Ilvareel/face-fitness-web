---
import Section from "../ui/Section.astro";
import FeatureGrid from "./FeatureGrid.astro";
---

<Section id="benefits" title="Natural and certified organic — skincare vibe (placeholder)">
  <div class="intro">
    <h2 class="title">Healthy habits, wildly you</h2>
    <p class="muted">
      A course designed to support facial posture and reduce tension patterns—through consistent, gentle technique.
    </p>
  </div>

  <FeatureGrid />

  <style>
    .intro{ margin-bottom: 16px; max-width: 72ch; }
    .title{
      margin: 0 0 8px;
      font-family: var(--font-serif);
      font-size: clamp(30px, 3.8vw, 46px);
      line-height: 1.06;
      letter-spacing: -0.01em;
    }
    .intro p{ margin: 0; }
  </style>
</Section>
