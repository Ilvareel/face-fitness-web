---
import Section from "../ui/Section.astro";
import MethodSteps from "./MethodSteps.astro";
---

<Section id="method" title="Feature">
  <div class="head">
    <h2 class="title">Innovation-led method</h2>
    <p class="muted">
      We combine posture cues and gentle soft tissue work to build better habits (placeholder).
    </p>
  </div>

  <MethodSteps />

  <style>
    .head{ margin-bottom: 16px; max-width: 72ch; }
    .title{
      margin: 0 0 8px;
      font-family: var(--font-serif);
      font-size: clamp(30px, 3.8vw, 46px);
      line-height: 1.06;
    }
    .head p{ margin: 0; }
  </style>
</Section>
