---
import Container from "../ui/Container.astro";
import Button from "../ui/Button.astro";
import { getCheckoutUrl } from "../../lib/checkout";

const CHECKOUT_URL = getCheckoutUrl("hero");
---

<section class="hero">
  <Container>
    <div class="hero__grid">
      <div>
        <p class="eyebrow">HIGH-TICKET COURSE • START ANYTIME</p>
        <h1>Lift and define your face naturally.</h1>
        <p class="lead">
          A guided face fitness course for women who want fuller cheeks, a sharper jawline, and a more open look — without needles.
        </p>

        <div class="hero__cta">
          <Button
            href={CHECKOUT_URL}
            variant="primary"
            target="_blank"
            rel="noreferrer"
            data-ff-event="checkout_click"
            data-ff-content="hero"
          >
            Join the course
          </Button>

          <Button
            href="#course"
            variant="secondary"
            data-ff-event="scroll_click"
            data-ff-content="hero_to_course"
          >
            See what’s inside
          </Button>
        </div>

        <ul class="hero__bullets">
          <li>Tongue posture + breathing + soft tissue work</li>
          <li>Short daily routine (placeholder: 10–15 min)</li>
          <li>Designed for women of all ages</li>
        </ul>

        <p class="disclaimer">Results vary. This is not medical advice. Stop if you feel pain.</p>
      </div>

      <div class="hero__visual">
        <div class="card">
          <p class="muted">Before / After</p>
          <div class="ba-grid">
            <div class="placeholder-box">Before</div>
            <div class="placeholder-box">After</div>
          </div>
          <p class="hint">Placeholder visuals — Alina will provide real examples later.</p>
        </div>
      </div>
    </div>
  </Container>
</section>
