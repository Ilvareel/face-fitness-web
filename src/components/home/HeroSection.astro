---
import Container from "../ui/Container.astro";
import Button from "../ui/Button.astro";
import { getCheckoutUrl } from "../../lib/checkout";

const checkoutUrl = getCheckoutUrl({ content: "hero", medium: "hero" });
---

<section class="hero" aria-label="Hero">
  <Container>
    <div class="hero__grid">
      <div class="hero__copy">
        <p class="kicker">Discover the beauty within you</p>
        <h1 class="hero__title">Lift and define your face — naturally.</h1>
        <p class="hero__lead muted">
          A guided face fitness course for women combining tongue posture, breathing and soft tissue work.
          Gentle. Structured. Sustainable.
        </p>

        <div class="hero__cta">
          <Button
            href={checkoutUrl}
            variant="primary"
            target="_blank"
            rel="noreferrer"
            data-ff-event="checkout_click"
            data-ff-content="hero"
            data-ff-outbound="checkout"
          >
            View course
          </Button>

          <Button
            href="#free-tips"
            variant="secondary"
            data-ff-event="scroll_click"
            data-ff-content="hero_to_free_tips"
          >
            Get free tips
          </Button>
        </div>

        <div class="hero__meta">
          <div class="hero__metaItem">
            <div class="hero__metaLabel">Routine</div>
            <div class="hero__metaValue">10–15 min/day</div>
          </div>
          <div class="hero__metaItem">
            <div class="hero__metaLabel">Approach</div>
            <div class="hero__metaValue">Gentle & consistent</div>
          </div>
          <div class="hero__metaItem">
            <div class="hero__metaLabel">Level</div>
            <div class="hero__metaValue">Beginner-friendly</div>
          </div>
        </div>
      </div>

      <div class="hero__image" aria-hidden="true">
        <div class="hero__imgPanel">
          <div class="hero__imgTop">
            <span class="hero__imgBadge">Featured</span>
            <span class="hero__imgSmall muted">Placeholder visuals</span>
          </div>
          <div class="hero__imgPlaceholder">Image</div>
        </div>
      </div>
    </div>
  </Container>

  <style>
    .hero{ padding: 84px 0 48px; }
    .hero__grid{
      display:grid;
      grid-template-columns: 1.05fr 0.95fr;
      gap: 28px;
      align-items: center;
    }
    .hero__title{
      font-size: clamp(42px, 5.2vw, 74px);
      margin: 10px 0 0;
      font-family: var(--font-serif);
    }
    .hero__lead{ margin: 14px 0 0; max-width: 62ch; font-size: 16px; }

    .hero__cta{ margin-top: 20px; display:flex; gap: 12px; flex-wrap: wrap; }

    .hero__meta{
      margin-top: 22px;
      display:grid;
      grid-template-columns: repeat(3, minmax(0,1fr));
      gap: 12px;
    }
    .hero__metaItem{
      border: 1px solid var(--line-2);
      border-radius: 16px;
      background: rgba(255,255,255,0.6);
      padding: 12px;
    }
    .hero__metaLabel{
      font-size: 12px;
      letter-spacing: 0.14em;
      text-transform: uppercase;
      color: rgba(17,17,17,0.58);
    }
    .hero__metaValue{
      margin-top: 6px;
      font-family: var(--font-serif);
      font-size: 18px;
    }

    .hero__imgPanel{
      border-radius: 22px;
      border: 1px solid var(--line-2);
      background: rgba(255,255,255,0.65);
      box-shadow: var(--shadow);
      overflow: hidden;
    }
    .hero__imgTop{
      display:flex;
      align-items:center;
      justify-content: space-between;
      padding: 14px 16px;
      border-bottom: 1px solid var(--line-2);
      background: rgba(255,255,255,0.75);
    }
    .hero__imgBadge{
      font-size: 12px;
      letter-spacing: 0.14em;
      text-transform: uppercase;
      color: var(--paper);
      background: var(--accent);
      padding: 8px 12px;
      border-radius: 999px;
    }
    .hero__imgPlaceholder{
      height: 360px;
      background:
        linear-gradient(180deg, rgba(107,63,34,0.08), transparent 55%),
        linear-gradient(90deg, rgba(17,17,17,0.04), rgba(17,17,17,0.02));
      display:grid;
      place-items:center;
      color: rgba(17,17,17,0.55);
      font-weight: 600;
      letter-spacing: 0.08em;
      text-transform: uppercase;
    }

    @media (max-width: 900px){
      .hero{ padding: 58px 0 34px; }
      .hero__grid{ grid-template-columns: 1fr; }
      .hero__imgPlaceholder{ height: 280px; }
      .hero__meta{ grid-template-columns: 1fr; }
    }

    /*Custom CSS styles*/
    .hero {
      background: #C3B2A6 !important;
    }
  </style>
</section>
