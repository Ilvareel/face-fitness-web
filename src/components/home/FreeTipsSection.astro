---
import Section from "../ui/Section.astro";
import LeadMagnetForm from "../LeadMagnetForm.astro";
---

<Section id="free-tips" title="Free tips (email)">
  <div class="grid grid--2">
    <div class="card">
      <h3 class="h3">Get the free mini-guide</h3>
      <p class="muted">3 quick tips to reduce facial tension and support a more open look.</p>

      <ul class="bullets">
        <li>One tiny daily habit you can start today</li>
        <li>Simple cues for tongue posture</li>
        <li>Gentle reminders + occasional updates</li>
      </ul>

      <p class="muted" style="margin-top:14px;">
        We respect your inbox. Unsubscribe anytime.
      </p>
    </div>

    <div class="formWrap">
      <LeadMagnetForm />
    </div>
  </div>

  <style>
    /* Keep form styles inside LeadMagnetForm; these are only layout helpers */
    .formWrap :global(.leadmagnet){
      display:block;
    }
    .formWrap :global(.leadmagnet__copy){
      margin-bottom: 10px;
    }
    .formWrap :global(#lead-form){
      margin-top: 6px;
    }
    .formWrap :global(.hp){
      position:absolute;
      left:-9999px;
      width:1px;
      height:1px;
      overflow:hidden;
    }
  </style>
</Section>
