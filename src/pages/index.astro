---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/ui/Section.astro";
import Button from "../components/ui/Button.astro";
import Hero from "../components/home/Hero.astro";
import FeatureGrid from "../components/home/FeatureGrid.astro";
import SocialProof from "../components/home/SocialProof.astro";
import FAQ from "../components/home/FAQ.astro";
import LeadMagnetForm from "../components/LeadMagnetForm.astro";
import { checkoutUrl } from "../lib/checkout";
import { siteName, siteDescription } from "../lib/site";
---

<BaseLayout title={siteName} description={siteDescription}>
  <Hero />

  <main>
    <Section id="results" title="Results & social proof">
      <SocialProof />
    </Section>

    <Section id="benefits" title="What you can expect">
      <FeatureGrid />
    </Section>

    <Section id="method" title="The method (why it’s different)">
      <div class="grid grid--2">
        <div class="card">
          <p class="muted" style="margin:0 0 8px;">Step 1</p>
          <h3 class="h3">Tongue posture</h3>
          <p class="muted">
            Learn placement and cues (placeholder).
          </p>
        </div>
        <div class="card">
          <p class="muted" style="margin:0 0 8px;">Step 2</p>
          <h3 class="h3">Breathing</h3>
          <p class="muted">
            Reduce shallow patterns, support better posture (placeholder).
          </p>
        </div>
        <div class="card">
          <p class="muted" style="margin:0 0 8px;">Step 3</p>
          <h3 class="h3">Soft tissues</h3>
          <p class="muted">
            Gentle release + activation (placeholder).
          </p>
        </div>
        <div class="card">
          <p class="muted" style="margin:0 0 8px;">Step 4</p>
          <h3 class="h3">Consistency</h3>
          <p class="muted">
            Short daily practice with progressive structure (placeholder).
          </p>
        </div>
      </div>
    </Section>

    <Section id="course" title="The course (hosted on the platform)">
      <div class="grid grid--2">
        <div class="card">
          <h3 class="h3">What you get</h3>
          <ul class="bullets">
            <li>Structured lessons + routine (placeholder)</li>
            <li>Technique cues and “common mistakes”</li>
            <li>Progress path (beginner → consistent habits)</li>
            <li>Access via course platform after purchase</li>
          </ul>
        </div>

        <div class="card">
          <h3 class="h3">Join now</h3>
          <p class="muted">
            Checkout and access are handled by the platform. This website is the learning + trust hub.
          </p>

          <Button
            href={checkoutUrl}
            variant="primary"
            data-ff-event="checkout_click"
            data-ff-content="course_section"
          >
            Go to checkout
          </Button>

          <small class="help">Placeholder pricing: $100+ • Start anytime</small>
        </div>
      </div>
    </Section>

    <Section id="faq" title="FAQ">
      <FAQ />
    </Section>

    <Section id="free-tips" title="Free tips (email)">
      <div class="grid grid--2">
        <div class="card">
          <h3 class="h3">What you’ll get</h3>
          <ul class="bullets" style="margin-top:10px;">
            <li>3 quick tips to reduce facial tension</li>
            <li>One tiny daily habit to keep results consistent</li>
            <li>Gentle reminders + occasional updates</li>
          </ul>

          <p class="muted" style="margin-top:14px; margin-bottom:0;">
            We respect your inbox. Unsubscribe anytime.
          </p>

          <div style="margin-top:16px; display:flex; gap:10px; flex-wrap:wrap;">
            <a
              class="btn btn--primary"
              href="#free-tips-form"
              data-ff-event="lead_magnet_click"
              data-ff-content="free_tips"
            >
              Get the guide
            </a>

            <a class="btn btn--ghost" href="/privacy">
              Privacy
            </a>
          </div>
        </div>

        <LeadMagnetForm
          id="free-tips-form"
          data-ff-event="lead_magnet_submit"
          data-ff-content="free_tips_form"
        />
      </div>
    </Section>
  </main>
</BaseLayout>
