---
import BaseLayout from "../layouts/BaseLayout.astro";
import Container from "../components/ui/Container.astro";
import Section from "../components/ui/Section.astro";
import Button from "../components/ui/Button.astro";

import Hero from "../components/home/Hero.astro";
import FeatureGrid from "../components/home/FeatureGrid.astro";
import MethodSteps from "../components/home/MethodSteps.astro";
import LeadMagnetForm from "../components/LeadMagnetForm.astro";

import { getCheckoutUrl } from "../lib/checkout";
import { SITE } from "../lib/site";

const CHECKOUT_URL = getCheckoutUrl("course_section");
---

<BaseLayout
  title={`${SITE.name} — Lift and define your face naturally`}
  description="A guided face fitness course for women who want fuller cheeks, a sharper jawline, and a more open look — without needles."
>
  <Hero />

  <main>
    <Section id="expect" title="What you can expect">
      <FeatureGrid />
    </Section>

    <Section id="method" title="The method (why it’s different)">
      <MethodSteps />
    </Section>

    <Section id="course" title="The course (hosted on the platform)">
      <div class="grid grid--2">
        <div class="card">
          <h3 style="margin-top:0;">What you get</h3>
          <ul>
            <li>Structured lessons + routine (placeholder)</li>
            <li>Technique cues and “common mistakes”</li>
            <li>Progress path (beginner → consistent habits)</li>
            <li>Access via course platform after purchase</li>
          </ul>
        </div>

        <div class="card">
          <h3 style="margin-top:0;">Join now</h3>
          <p style="color:var(--muted);">
            Checkout and access are handled by the platform. This website is the learning + trust hub.
          </p>

          <a
            class="btn btn--primary"
            href={CHECKOUT_URL}
            target="_blank"
            rel="noreferrer"
            data-ff-event="checkout_click"
            data-ff-content="course_section"
          >
            Go to checkout
          </a>

          <p class="hint">Placeholder pricing: $100+ • Start anytime</p>
        </div>
      </div>
    </Section>

    <Section id="results" title="Results & social proof">
      <div class="grid grid--2">
        <div class="card">
          <h3 style="margin-top:0;">Before / After (placeholder)</h3>
          <div class="grid grid--2" style="gap:12px;">
            <div class="placeholder-box">Example 1</div>
            <div class="placeholder-box">Example 2</div>
            <div class="placeholder-box">Example 3</div>
            <div class="placeholder-box">Example 4</div>
          </div>
          <p class="hint">Real examples will be added later.</p>
        </div>

        <div class="card">
          <h3 style="margin-top:0;">What students say (placeholder)</h3>
          <div class="quotes">
            <blockquote>
              “After a few weeks my face looked more rested and open.”
              <cite>— Student A</cite>
            </blockquote>
            <blockquote>
              “The routine is simple, I can actually stick to it.”
              <cite>— Student B</cite>
            </blockquote>
            <blockquote>
              “I didn’t realize how much tongue posture affects everything.”
              <cite>— Student C</cite>
            </blockquote>
          </div>
        </div>
      </div>
    </Section>

    <Section id="faq" title="FAQ">
      <details class="faq" open>
        <summary>When will I see results?</summary>
        <p style="color:var(--muted);">
          Consistency matters. Results vary based on habits, starting point, and frequency (placeholder).
        </p>
      </details>

      <details class="faq">
        <summary>Is it safe?</summary>
        <p style="color:var(--muted);">
          Gentle techniques, stop if you feel pain. This is not medical advice (placeholder).
        </p>
      </details>

      <details class="faq">
        <summary>How do I access the course?</summary>
        <p style="color:var(--muted);">
          You purchase on the platform; access is granted there. This site links to it.
        </p>
      </details>

      <details class="faq">
        <summary>Do I need equipment?</summary>
        <p style="color:var(--muted);">No. Just your hands + consistency (placeholder).</p>
      </details>
    </Section>

    <Section id="free-tips" title="Free tips (email)">
      <div class="grid grid--2">
        <div class="card">
          <h3 style="margin-top:0;">Get the free mini-guide</h3>
          <p style="color:var(--muted);">
            Placeholder: 3 quick tips to reduce facial tension and support a more open look.
          </p>
          <p class="hint">We respect your inbox. Unsubscribe anytime.</p>
        </div>

        <LeadMagnetForm />
      </div>
    </Section>

    <Container>
      <div class="footer-cta">
        <Button
          href={CHECKOUT_URL}
          variant="primary"
          target="_blank"
          rel="noreferrer"
          data-ff-event="checkout_click"
          data-ff-content="footer_cta"
        >
          Join the course
        </Button>

        <Button
          href="/about"
          variant="secondary"
          data-ff-event="internal_click"
          data-ff-content="footer_about"
        >
          Learn about Alina
        </Button>
      </div>
    </Container>
  </main>
</BaseLayout>
